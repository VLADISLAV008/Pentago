<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_rules" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/settings"
        android:textColor="@color/red"
        android:textSize="@dimen/settingsTextSize" />

    <FrameLayout
        android:layout_alignBottom="@id/bg"
        android:layout_below="@id/ip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/music"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:background="@drawable/music_icon" />
            <Button
                android:id="@+id/privacy_policy"
                android:layout_width="@dimen/privacy_policy_button_width"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="@dimen/privacy_policy_button_height"
                android:background="@drawable/menu_button"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="@string/privacy_policy"/>
        </LinearLayout>


    </FrameLayout>

</RelativeLayout>


