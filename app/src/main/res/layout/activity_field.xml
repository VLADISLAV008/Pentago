                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/left_bottom"
            android:layout_width="@dimen/size_field"
            android:layout_height="@dimen/size_field"
            android:layout_alignTop="@+id/left_top"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/big_red">

            <TableRow>

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn11"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn12"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn13"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn14"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn15"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn16"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn17"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn18"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/right_top"
            android:layout_width="@dimen/size_field"
            android:layout_height="@dimen/size_field"
            android:layout_alignLeft="@+id/left_top"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/big_red">

            <TableRow>

                <Button
                    android:id="@+id/btn19"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn20"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn21"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn22"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn23"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn24"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn25"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn26"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn27"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/right_bottom"
            android:layout_width="@dimen/size_field"
            android:layout_height="@dimen/size_field"
            android:layout_alignLeft="@+id/left_bottom"
            android:layout_alignTop="@+id/right_top"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/big_red">

            <TableRow>

                <Button
                    android:id="@+id/btn28"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn29"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn30"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn31"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn32"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn33"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn34"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn35"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn36"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="275dp"
            android:layout_height="185dp"
            android:layout_alignLeft="@id/left_top"
            android:layout_marginTop="130dp"
            android:alpha="0"
            android:background="@drawable/win_picture"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/left_bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:alpha="0"
            android:text="@string/wightWins"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewColourOfPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arrow_right_bottom_clockwise"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/youArePlaying"
            android:textColor="@color/red"
            android:textSize="30dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imageViewColourOfPlayer"
            android:layout_width="@dimen/size_cell"
            android:layout_height="@dimen/size_cell"
            android:layout_toRightOf="@+id/textViewColourOfPlayer"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/arrow_right_bottom_clockwise"
            android:visibility="invisible"
            android:layout_toEndOf="@+id/textViewColourOfPlayer"
            android:layout_marginStart="10dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewColourOfPlayer"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7091507023849858/9155957335">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>
</RelativeLayout>