<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/moveWight"
        android:textColor="@color/red"
        android:textSize="30sp" />

    <Button
        android:id="@+id/play_again"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_button"
        android:text="@string/newGame"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/arrow_left_top_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="41dp"
            android:alpha="0"
            android:background="@drawable/arrow"
            android:rotation="90"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_right_top_counter_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignRight="@+id/right_top"
            android:layout_marginTop="41dp"
            android:alpha="0"
            android:background="@drawable/arrow_mirror"
            android:rotation="90"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_right_top_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignTop="@+id/right_top"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/right_top"
            android:alpha="0"
            android:background="@drawable/arrow"
            android:rotation="180"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_right_bottom_counter_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignBottom="@+id/right_bottom"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/right_bottom"
            android:alpha="0"
            android:background="@drawable/arrow_mirror"
            android:rotation="180"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_right_bottom_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignRight="@+id/right_bottom"
            android:layout_marginTop="365dp"
            android:alpha="0"
            android:background="@drawable/arrow"
            android:rotation="270"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_left_bottom_counter_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignLeft="@+id/left_bottom"
            android:layout_marginTop="365dp"
            android:alpha="0"
            android:background="@drawable/arrow_mirror"
            android:rotation="270"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_left_bottom_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignBottom="@+id/left_bottom"
            android:alpha="0"
            android:background="@drawable/arrow"
            android:rotation="0"
            android:visibility="invisible" />

        <Button
            android:id="@+id/arrow_left_top_counter_clockwise"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_alignTop="@+id/left_top"
            android:alpha="0"
            android:background="@drawable/arrow_mirror"
            android:rotation="0"
            android:visibility="invisible" />

        <TableLayout
            android:id="@+id/left_top"
            android:layout_width="@dimen/size_field"
            android:layout_height="@dimen/size_field"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/big_red">

            <TableRow>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="@dimen/size_cell"
                    android:layout_height="@dimen/size_cell"
                    android:background="@drawable/button_red_blank"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/btn3"
